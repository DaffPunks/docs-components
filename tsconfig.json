{
  "compilerOptions": {
    "target": "es2017",
    "module": "esNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "declaration": true,
    "resolveJsonModule": true,
    "rootDirs": ["src", "jest"],
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["./jest/*", "./node_modules/*"]
    },
    "jsx": "react"
  },
}